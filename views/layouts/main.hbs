<!doctype html>
<html class="no-js" lang="">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Roadtrip Europe</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="manifest" href="site.webmanifest">
        <link rel="apple-touch-icon" href="icon.png">
        <!-- Place favicon.ico in the root directory -->

        <link rel="stylesheet" href="vendor/css/bootstrap/custom.css">
        <link rel="stylesheet" href="css/main.css">

        {{#unless fullscreen}}
        <link rel="stylesheet" href="css/sidebarLayout.css">
        {{/unless}}

        {{{_sections.head}}}

    </head>

    <body>
        <!--[if lte IE 9]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
        <![endif]-->

        <!-- Add your site or application content here -->
        {{#if fullscreen}}
        {{{body}}}
        {{else}}
        <!--When we are not in fullscreen we only render the contents of the left and right side of the grid:-->
        <div id="grid-container" class="row no-gutters">
            <div class="col" id="body-container">
                {{{body}}}
            </div>
            <div class="col-21 col-sm-auto order-first order-sm-last">
                <div class="container-fluid">
                    <div class="row" id="sidebar">
                        {{{_sections.sidebar}}}
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <!-- a library to test what features the client browser has!
            <script src="js/vendor/modernizr-3.6.0.min.js"></script> -->
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <!--A trick how to load the local jQuery when the serverside one did not work! -->
            <script>
                window.jQuery || document.write('<script src="vendor/js/jquery.min.js"><\/script>')
                </script>
                <script src="js/main.js"></script>
                {{{_sections.jQuery}}}
                <!-- Google Analytics: change UA-XXXXX-Y to be your site's ID. -->
                <script>
                    window.ga = function() {
                        ga.q.push(arguments)
                    };
                    ga.q = [];
                    ga.l = +new Date;
                    ga('create', 'UA-XXXXX-Y', 'auto');
                    ga('send', 'pageview')
                </script>
                <script src="https://www.google-analytics.com/analytics.js" async defer></script>
    </body>
</html>
